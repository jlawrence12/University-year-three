		grade = new Grade(8);
		
		Classification classification = grade.classify();
		assertEquals(classification,  Classification.Fail);
	}
	@Test 
	void givenGrdeClassifyFirst() {
		grade = new Grade(8);
		
		Classification classification = grade.classify();
		assertEquals(classification,  Classification.Fail);
	}
	@Test 
	void givenGrdeClassifyUpperSecound() {
		grade = new Grade(8);
		
		Classification classification = grade.classify();
